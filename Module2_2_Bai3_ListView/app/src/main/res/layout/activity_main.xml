<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_ten"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Nhập tên :"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/eidttext_ten"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#48BAC8"
            />

    </LinearLayout>
      <TextView
          android:id="@+id/textview_kq"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:text=""
          android:background="#126E66"
          />
    <Button
        android:id="@+id/button_nhap"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:text="Nhập"
        android:textColor="@color/black"
        android:backgroundTint="#989895"
        android:layout_marginTop="10dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listview_ten"
        />


</LinearLayout>