<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Quản lý nhân viên "
        android:textSize="30sp"
        android:gravity="center"
        android:background="#3F850D"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/textview_ma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã NV :"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/edittext_ma"
            android:layout_width="290dp"
            android:layout_height="61dp"
            android:inputType="number"
            android:backgroundTint="#00BCD4"
            android:hint="Vui lòng nhập thông tin" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textview_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên NV :"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:hint="Vui lòng nhập thông tin"
            android:layout_marginTop="10dp"
            android:id="@+id/edittext_ten"
            android:layout_width="290dp"
            android:layout_height="61dp"
            android:backgroundTint="#00BCD4"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textview_loaiNV"
            android:layout_width="133dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Loại NV :"
            android:textSize="25sp" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton_chinhthuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Chính thức" />

            <RadioButton
                android:id="@+id/radioButton_thoivu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Thời vụ" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/button_nhap"
        android:layout_width="273dp"
        android:layout_height="63dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#979796"
        android:text="Nhập"
        android:textColor="@color/black">


    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  "
        android:textSize="30sp"
        android:gravity="center"
        android:background="#3F850D"/>

    <ListView
        android:id="@+id/listview_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>